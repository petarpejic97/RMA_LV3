<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.FragmentAddNew">

    <EditText
        android:id="@+id/edFullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter person full name"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </EditText>

    <EditText
        android:id="@+id/edBirth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Enter person birth date"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edFullname">

    </EditText>
    <EditText
        android:id="@+id/edDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter something about person"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edBirth">

    </EditText>

    <EditText
        android:id="@+id/edLinkImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter image link"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edDescription">

    </EditText>

    <EditText
        android:id="@+id/edStatements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter person popular statements"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edLinkImage">
    </EditText>

    <TextView
        android:id="@+id/tvAdvice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Please every statement split with ' | ' . Maximum number of statements is 5."
        app:layout_constraintTop_toBottomOf="@+id/edStatements">
    </TextView>

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:text="Add" />

</androidx.constraintlayout.widget.ConstraintLayout>