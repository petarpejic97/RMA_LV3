<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">
    <ImageView
        android:id="@+id/imgPerson"
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/tvPersonFullname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/imgPerson"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgPerson"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20sp"
        android:text="@string/app_name"
        android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/tvBirdth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/imgPerson"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPersonFullname"
        android:layout_marginLeft="10dp"
        android:text="@string/app_name"
        android:layout_marginStart="10dp" />
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/imgPerson"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBirdth"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="@string/app_name"
        android:layout_marginStart="10dp" />

    <ImageView
        android:id="@+id/ivRemove"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/preuzmi"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimaryDark"
        tools:ignore="MissingConstraints">
    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>